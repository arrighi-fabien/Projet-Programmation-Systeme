<Application x:Class="EasySaveGUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EasySaveGUI"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- Resource definition -->
        <LinearGradientBrush x:Key="MainBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF06283D" Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="ButtonBorderBrush" Color="White"/>
        <SolidColorBrush x:Key="ButtonBackground" Color="White"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#FFDFF6FF"/>
        <SolidColorBrush x:Key="ListViewBackground" Color="#FFDFF6FF"/>
        <SolidColorBrush x:Key="SaveButtonBackground" Color="#FFDFF6FF"/>
    </Application.Resources>
</Application>
